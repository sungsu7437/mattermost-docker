{
    "AWSEBDockerrunVersion": "2",
    "volumes": [
        {
            "name": "etclocaltime",
            "host": {
                "sourcePath": "/etc/localtime"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "app",
            "image": "sungsu7437/mattermost-prod-app:latest",
            "memory": 1024,
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "etclocaltime",
                    "containerPath": "/etc/localtime"
                }
            ],
            "environment": [
              {
                "name": "DB_HOST",
                "value": "db_endpoint"
              }, {
                "name": "DB_PORT",
                "value": "5432"
              }, {
                "name": "MM_USERNAME",
                "value": "postgres"
              }, {
                "name": "MM_PASSWORD",
                "value": "db_password"
              }, {
                "name": "MM_DBNAME",
                "value": "mattermost"
              }, {
                "name": "MM_DRIVER_NAME",
                "value": "amazons3"
              }, {
                "name": "MM_AMAZON_S3_BUCKET",
                "value": "BUCKET_NAME"
              }, {
                "name": "MM_AMAZON_S3_REGION",
                "value": "us-west-2"
              }, {
                "name": "MM_AMAZON_S3_ACCESS_KEY_ID",
                "value": "XXXX"
              }, {
                "name": "MM_AMAZON_S3_SECRET_ACCESS_KEY",
                "value": "XXXX"
              }
            ],
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 8000
                }
            ]
        }
    ]
}

